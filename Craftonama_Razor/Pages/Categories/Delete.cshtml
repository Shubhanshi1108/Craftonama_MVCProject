@page
@model Craftonama_Razor.Pages.Categories.DeleteModel
@{
}


<form method="post" class="form-control-sm">
	<input asp-for="Category.CategoryId" hidden />
	<div class="border p-4 mt-4">
		<div class="row pb-2">
			<h3 class="text-primary">Edit Category</h3>

		</div>
		@*This will display all the validation messages under heading above form*@
		<div asp-validation-summary="All"></div>
		<div class="mb-3 row p-2">
			<label asp-for="Category.Name" class="p-0"></label>
			<input asp-for="Category.Name" class="form-control" disabled/>
			<span asp-validation-for="Category.Name" class="text-danger"></span>
		</div>

		<div class="mb-3 row p-2">
			<label asp-for="Category.DisplayOrder" class="p-0"></label>
			<input asp-for="Category.DisplayOrder" class="form-control" disabled/>
			<span asp-validation-for="Category.DisplayOrder" class="text-danger"></span>
		</div>
		<div class="row">
			<div class="col-6 col-md-6 ">
				<button type="submit" class="btn btn-danger form-control">Delete</button>

			</div>
			<div class=" col-6 col-md-6">
				<a asp-page="/categories/index" class="btn btn-outline-primary form-control">Back to List</a>

			</div>
		</div>

	</div>
</form>

