@model Category

<form method="post">
	<input asp-for="CategoryId" hidden />
	<div class="border p-4 mt-4">
		<div class="row pb-2">
			<h3 class="text-primary">Delete Category</h3>

		</div>
		@*This will display all the validation messages under heading above form*@
		<div asp-validation-summary="All"></div>
		<div class="mb-3 row p-2">
			<label asp-for="Name" class="p-0"></label>
			<input asp-for="Name" class="form-control" />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>

		<div class="mb-3 row p-2">
			<label asp-for="DisplayOrder" class="p-0"></label>
			<input asp-for="DisplayOrder" class="form-control" />
			<span asp-validation-for="DisplayOrder" class="text-danger"></span>
		</div>
		<div class="row">
			<div class="col-6 col-md-6 ">
				<button type="submit" class="btn btn-danger form-control">Delete</button>

			</div>
			<div class=" col-6 col-md-6">
				<a asp-controller="Category" asp-action="Index" class="btn btn-outline-primary form-control">Back to List</a>

			</div>
		</div>

	</div>
</form>

